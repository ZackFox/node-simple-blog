//----header
include top.pug
include header.pug 
//------content       
div.container.content-wrapper          
  div.row
    div.col-md-12
      div.well.well-small.clearfix            
        div.row-fluid
          div.col-md-2
            img.img-polaroid(src="/img/blank_avatar.jpg" width="100")
            if isOwn
              a(href="/profile/"+user.nickname+"/edit") редактировать
        
          div.col-md-4
            h2= user.nickname
            ul.unstyled 
              li
                p= user.email
                i.fa.fa-envelope 
            
          div.col-md-6
            ul.inline.stats
              li
                p Постов :
                  span= user.posts.length
              li
                p Подписчиков :
                  span 0

  div.row 
    div.col-md-10.col-md-offset-1
      each post in user.posts
        .well
          div.row
            div.col-md-12
              h2.heading
                a(href="/profile/"+ post.author +"/post/"+post._id)= post.title
                if isOwn 
                  a.post-del(href="/profile/"+ post.author +"/post/"+post._id) Удалить
          div.row
            div.col-md-12.post-text
              p= post.preview
              span.createTime= moment(post.createTime).format('DD MMMM YYYY')
              span.com-count="Комментариев: "+ post.comments.length
//----footers
include footer.pug