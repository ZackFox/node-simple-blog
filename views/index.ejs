<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/header %>
    <div class="container h-100 d-flex">
      <section class="col-md-9">
        <% if (posts.length > 0) {%>
          <ul class="posts-list">              
            <% for(let post of posts) { %>
              <% include ./partials/postItem %>
            <% } %>
          </ul>  
        <% } %>
      
        <% if (pages > 1) {%>        
          <% include ./partials/pagination.ejs %>
        <% }%>
      </section>
      
      <aside class="col-md-3">
        <div class="aside-block popular-posts">
          <h4>Топ 5</h4>
          <ul>
            <li><a href="">post 1</a></li>
            <li><a href="">post 2</a></li>
            <li><a href="">post 3</a></li>
            <li><a href="">post 4</a></li>
            <li><a href="">post 5</a></li>
          </ul>
        </div>

        <div class="aside-block current-posts">
          <h4>Новые посты</h4>
          <% if (lastPosts.length > 0) {%>
            <ul class="">              
              <% for(let p of lastPosts) { %>
                <li><a href=""><%= p.title %></a></li> 
              <% } %>
            </ul>  
          <% } %>
        </div>
        <div class="aside-block current-comments">
          <h4>Новые комментарии</h4>        
          <ul>
              <li><a href="">post 1</a></li>
              <li><a href="">post 2</a></li>
              <li><a href="">post 3</a></li>
              <li><a href="">post 4</a></li>
              <li><a href="">post 5</a></li>
            </ul>
        </div>
        <div class="aside-block categories">
          <h4>Категории</h4>        
        </div>
      </aside>

    </div>
    
    <% include ./partials/footer %>
    <% include ./partials/scripts %>
  </body>
</html>