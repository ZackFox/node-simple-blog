<li class="post-item">
  <a href="/profile/<%= post.author.nickname %>" class="post-author">        
    <%= post.author.username %>  
  </a> 
  <a href="/profile/<%= post.author.nickname %>" class="post-avatar">    
    <img src="/img/<%- post.author.avatar %>">      
  </a>                                                             
                    
  <div class="post-header">
    <a href="/profile/<%= post.author.nickname %>/post/<%= post._id %>" class="heading" >
      <h3><%= post.title %></h3>  
    </a> 
  </div>    
  <div class="post-text"><%- post.preview %></div>              
  <div class="post-footer">        
    <span class="createTime">
      <%= moment(post.createTime).format('D MMMM YYYY (HH:mm)') %>
    </span> 
    <div class="post-stats">
      <span class="com-count">
        <i class="fa fa-comments-o"></i><%= post.commentsCount %>
      </span>
      <span class="like-count">
        <i class="fa fa-heart-o"></i><%= post.likesCount %>
      </span>  
    </div>
  </div>                
</li>