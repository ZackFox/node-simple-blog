<div class="modal-wrapper">
  <div class="modal-login container">
    <a href="/" class="modal-close"><i class="fa fa-times-circle-o"></i></a>  
    <form class="form-horizontal loginform" action="/signin" method="post">        
      <input type="hidden" id="csrf" name="_csrf"  value="<%= token %>" >
      <div class="form-group">
        <label> Введите ваш Email</label>
        <input class="form-control" type="text" id="email" name="email" placeholder=" Ваш Email">
      </div>
      <div class="form-group">
        <label>Введите ваш пароль</label>
        <input class="form-control" type="password" id="password" name="password" placeholder="Ваш пароль">        
      </div>
      <p class="login-message"></p>     
      <div class="form-group">
        <input class="btn btn-succes" type="submit" value="Войти">
      </div>            
    </form>
  </div>
</div>

